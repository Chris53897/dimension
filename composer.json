{
    "name": "zenstruck/dimension",
    "description": "Wrap quantity and unit of measure with conversions/humanizers.",
    "homepage": "https://github.com/zenstruck/dimension",
    "type": "library",
    "license": "MIT",
    "keywords": ["dimension", "unit", "convert", "measure", "humanize"],
    "authors": [
        {
            "name": "Kevin Bond",
            "email": "kevinbond@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.4",
        "phpunit/phpunit": "^9.5.0",
        "symfony/phpunit-bridge": "^6.0",
        "symfony/var-dumper": "^5.4|^6.0",
        "twig/twig": "^2.0|^3.0"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    },
    "autoload": {
        "psr-4": { "Zenstruck\\": ["src/"] }
    },
    "autoload-dev": {
        "psr-4": { "Zenstruck\\Dimension\\Tests\\": ["tests/"] }
    },
    "suggest": {
        "twig/twig": "To use the provided Twig extension"
    }
}
